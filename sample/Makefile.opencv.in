CPPFLAGS += -I@prefix@/include 
LDFLAGS  += -lcam1394 
CPPFLAGS += @X_CFLAGS@
LDFLAGS  += @X_LIBS@ @X_PRE_LIBS@ -lX11
CPPFLAGS += `opencv-config  --cflags` 
LDFLAGS  += `opencv-config  --libs`

CPPFLAGS += -g

TARGET    = main-with-opencv

all: $(TARGET)

clean: 
	rm -f $(TARGET) *.o
