CPPFLAGS += -I@prefix@/include 
LDFLAGS  += -lcam1394 @LIBRAW1394_LIBS@
CPPFLAGS += `pkg-config opencv  --cflags` 
LDFLAGS  += `pkg-config opencv  --libs`

CPPFLAGS += -g

TARGET    = main-with-opencv

all: $(TARGET)

clean: 
	rm -f $(TARGET) *.o
